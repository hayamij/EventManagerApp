<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weekCalendarRoot"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:id="@+id/headerRow"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Ô góc: "Buổi" -->
        <TextView
            android:id="@+id/cellHeaderSession"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="Buổi"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"/>

        <!-- 7 ô header ngày -->
        <TextView
            android:id="@+id/headerDay1"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"
            android:text="Thứ 2&#10;--/--/----"/>

        <TextView
            android:id="@+id/headerDay2"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"
            android:text="Thứ 3&#10;--/--/----"/>

        <TextView
            android:id="@+id/headerDay3"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"
            android:text="Thứ 4&#10;--/--/----"/>

        <TextView
            android:id="@+id/headerDay4"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"
            android:text="Thứ 5&#10;--/--/----"/>

        <TextView
            android:id="@+id/headerDay5"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"
            android:text="Thứ 6&#10;--/--/----"/>

        <TextView
            android:id="@+id/headerDay6"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"
            android:text="Thứ 7&#10;--/--/----"/>

        <TextView
            android:id="@+id/headerDay7"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"
            android:text="Chủ nhật&#10;--/--/----"/>
    </LinearLayout>

    <!-- ================= ROW: SÁNG ================= -->
    <LinearLayout
        android:id="@+id/rowMorning"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- title Sáng -->
        <TextView
            android:id="@+id/cellMorningTitle"
            android:layout_width="120dp"
            android:layout_height="220dp"
            android:text="Sáng"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"/>

        <!-- 7 ô event container (Sáng) -->
        <LinearLayout
            android:id="@+id/morningCell1"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/morningCell2"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/morningCell3"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/morningCell4"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/morningCell5"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/morningCell6"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/morningCell7"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>
    </LinearLayout>

    <!-- ================= ROW: CHIỀU ================= -->
    <LinearLayout
        android:id="@+id/rowAfternoon"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- title Chiều -->
        <TextView
            android:id="@+id/cellAfternoonTitle"
            android:layout_width="120dp"
            android:layout_height="220dp"
            android:text="Chiều"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_grid_cell"/>

        <!-- 7 ô event container (Chiều) -->
        <LinearLayout
            android:id="@+id/afternoonCell1"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/afternoonCell2"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/afternoonCell3"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/afternoonCell4"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/afternoonCell5"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/afternoonCell6"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>

        <LinearLayout
            android:id="@+id/afternoonCell7"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_grid_cell"/>
    </LinearLayout>

</LinearLayout>
